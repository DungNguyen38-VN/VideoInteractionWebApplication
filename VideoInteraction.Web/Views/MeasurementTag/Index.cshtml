@model List<MeasurementTag>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@_localization.Getkey("MeasurementTag").Value @_localization.Getkey("List").Value</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="MeasurementTag" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>@_localization.Getkey("Create").Value @_localization.Getkey("MeasurementTag").Value
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>@_localization.Getkey("DisplayOrder").Value</th>
                    <th>@_localization.Getkey("TagName").Value</th>
                    <th>@_localization.Getkey("Description").Value</th>
                    @* <th>CreatedTs</th> *@
                    <th>@_localization.Getkey("UpdatedTime").Value </th>
                    <th>@_localization.Getkey("Camera").Value</th>
                    <th>@_localization.Getkey("MeasurementUnit").Value</th>
                    <th>@_localization.Getkey("MeasurementPrefix").Value</th>
                    <th></th>
                </tr>
            </thead>
        </table>

    </div>
</div>

@section Scripts{
    <script src="~/js/MeasurementTag.js"></script>
}
