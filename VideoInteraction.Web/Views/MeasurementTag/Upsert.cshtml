@model MeasurementTagVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.MeasurementTag.Id != 0 ? @_localization.Getkey("Update").Value : @_localization.Getkey("Create").Value) @_localization.Getkey("MeasurementTag").Value</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="MeasurementTag.Id" hidden />
           
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="MeasurementTag.DisplayOrder" class="form-control border-0 shadow" />
                            <label asp-for="MeasurementTag.DisplayOrder" class="ms-2">@_localization.Getkey("DisplayOrder").Value</label>
                            <span asp-validation-for="MeasurementTag.DisplayOrder" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="MeasurementTag.MeasureTagName" class="form-control border-0 shadow" />
                            <label asp-for="MeasurementTag.MeasureTagName" class="ms-2">@_localization.Getkey("TagName").Value</label>
                            <span asp-validation-for="MeasurementTag.MeasureTagName" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="MeasurementTag.TagDescription" class="ms-2 text-muted">@_localization.Getkey("Description").Value</label>
                            <textarea asp-for="MeasurementTag.TagDescription" class="form-control border-0 shadow"></textarea>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.MeasurementTag.CameraId" asp-items="@Model.CameraList" class="form-select border-0 shadow">
                                <option disabled selected>--@_localization.Getkey("Select").Value @_localization.Getkey("Camera").Value--</option>
                            </select>
                            <label asp-for="MeasurementTag.CameraId" class="ms-2">@_localization.Getkey("Camera").Value</label>
                            <span asp-validation-for="MeasurementTag.CameraId" class="text-danger"></span>
                        </div> 
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.MeasurementTag.MeasurementUnitId" asp-items="@Model.MeasurementUnitList" class="form-select border-0 shadow">
                                <option disabled selected>--@_localization.Getkey("Select").Value @_localization.Getkey("MeasurementUnit").Value--</option>
                            </select>
                            <label asp-for="MeasurementTag.MeasurementUnitId" class="ms-2">@_localization.Getkey("MeasurementUnit").Value</label>
                            <span asp-validation-for="MeasurementTag.MeasurementUnitId" class="text-danger"></span>
                        </div> 
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.MeasurementTag.MeasurementPrefixId" asp-items="@Model.MeasurementPrefixList" class="form-select border-0 shadow">
                                <option disabled selected>--@_localization.Getkey("Select").Value @_localization.Getkey("MeasurementPrefix").Value--</option>
                            </select>
                            <label asp-for="MeasurementTag.MeasurementPrefixId" class="ms-2">@_localization.Getkey("MeasurementPrefix").Value</label>
                            <span asp-validation-for="MeasurementTag.MeasurementPrefixId" class="text-danger"></span>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.MeasurementTag.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">@_localization.Getkey("Update").Value</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">@_localization.Getkey("Create").Value</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="MeasurementTag" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                    @_localization.Getkey("BacktoList").Value
                                </a>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
           
        </form>
    </div>
</div>




