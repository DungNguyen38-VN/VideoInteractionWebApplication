@model List<Window>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@_localization.Getkey("WindowList").Value</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Window" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>@_localization.Getkey("CreateNewWindow").Value
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @_localization.Getkey("WindowName").Value
                    </th>
                    <th>
                        @_localization.Getkey("WindowID").Value
                    </th>
                    <th>
                        @_localization.Getkey("WindowURL").Value
                    </th>
                    <th>
                        @_localization.Getkey("Description").Value
                    </th>
                    <th>
                        @_localization.Getkey("CreatedTime").Value
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Id))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>
                            @obj.WndId
                        </td>
                        <td>
                            @obj.WndUrl
                        </td>
                        <td>
                            @obj.Description
                        </td>
                        <td>
                            @obj.CreatedTs
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Window" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>@_localization.Getkey("Edit").Value
                                </a>
                                <a asp-controller="Window" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>@_localization.Getkey("Delete").Value
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

