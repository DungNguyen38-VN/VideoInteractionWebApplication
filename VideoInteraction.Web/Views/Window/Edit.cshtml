@model Window
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@_localization.Getkey("EditWindow").Value</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                @*<div asp-validation-summary="ModelOnly"></div>*@
               <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2">@_localization.Getkey("WindowName").Value</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="WndId" class="form-control border-0 shadow" />
                    <label asp-for="WndId" class="ms-2">@_localization.Getkey("WindowID").Value</label>
                    <span asp-validation-for="WndId" class="text-danger"></span>
                </div>  
                <div class="form-floating py-2 col-12">
                    <input asp-for="WndUrl" class="form-control border-0 shadow" />
                    <label asp-for="WndUrl" class="ms-2">@_localization.Getkey("WindowURL").Value</label>
                    <span asp-validation-for="WndUrl" class="text-danger"></span>
                </div>  
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2">@_localization.Getkey("Description").Value</label>
                    @* <span asp-validation-for="Description" class="text-danger"></span> *@
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control"> @_localization.Getkey("Update").Value</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Window" asp-action="Index" class="btn btn-secondary border  form-control">
                            @_localization.Getkey("BacktoList").Value
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}